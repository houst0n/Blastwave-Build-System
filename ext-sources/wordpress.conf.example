# copy this file over from samples-conf.d to conf.d and reload your apache configuration
#
# Use name-based virtual hosting.
# (you may include conf.d/vhosts.conf to get the line below)
#NameVirtualHost *:80



<VirtualHost *:80>
    ServerAdmin webmaster@localhost
    DocumentRoot "/var/wordpress/"
    ServerName wordpress
    ServerAlias wordpress.yourdomain.com
    <Directory /var/wordpress>
        Options MultiViews Indexes FollowSymLinks SymlinksIfOwnerMatch Includes ExecCGI
        AllowOverride FileInfo AuthConfig Indexes
        Order allow,deny
        Allow from all
    </Directory>
    ErrorLog "/var/apache2/2.2/logs/wordpress.yourdomain.com-error_log"
    CustomLog "/var/apache2/2.2/logs/wordpress.yourdomain.com-access_log" common
