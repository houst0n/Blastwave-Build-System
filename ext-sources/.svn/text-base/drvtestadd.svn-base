DEVLIST=""
count=0
BASEDIR_OPT=""

if [ "${BASEDIR:=/}" != "/" ]
then
	BASEDIR_OPT="-b $BASEDIR"
fi

test_get_dev_list() {
	DEVLIST="'"
	for i in "$@"
	do
		grep $i /etc/driver_aliases > /dev/null
		if [ $? -ne 0 ]
		then
			DEVLIST="${DEVLIST}$i "
		else
			count=`expr $count + 1`
		fi
	done
	DEVLIST="${DEVLIST}'"
}

cmd=""
check_add_drv() {
	cmd="/usr/sbin/add_drv ${BASEDIR_OPT} "
	arg="$@"
	if [ "$DEVLIST" != "''" ]
	then
		drv=$7
		if [ $count -gt 0 ]
		then
			grep "$drv " ${BASEDIR:=/}/etc/driver_aliases > /dev/null
			if [ $? -eq 0 ]
			then
				echo $arg > /tmp/cnt
				cmd="/usr/sbin/update_drv ${BASEDIR_OPT} -a "
				line=`sed 's/\-n//' /tmp/cnt`
				cmd="${cmd} ${line}"
			else
				cmd="${cmd} ${arg}"
			fi
		else
			cmd="${cmd} ${arg}"
		fi
		eval ${cmd}
	else
		echo "WARNING: Driver not added as all device aliases in use"
	fi
}
